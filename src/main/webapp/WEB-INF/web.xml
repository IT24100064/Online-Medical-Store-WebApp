
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
    <display-name>Online Medical Store</display-name>
    <!--  Welcome File List  -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!--  Servlet Declarations  -->
    <servlet>
        <servlet-name>AddMedicineServlet</servlet-name>
        <servlet-class>servlet.AddMedicineServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewMedicineServlet</servlet-name>
        <servlet-class>servlet.ViewMedicineServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditMedicineServlet</servlet-name>
        <servlet-class>servlet.EditMedicineServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteMedicineServlet</servlet-name>
        <servlet-class>servlet.DeleteMedicineServlet</servlet-class>
    </servlet>
    <!--  Servlet Mappings  -->
    <servlet-mapping>
        <servlet-name>AddMedicineServlet</servlet-name>
        <url-pattern>/addMedicine</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewMedicineServlet</servlet-name>
        <url-pattern>/viewMedicines</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditMedicineServlet</servlet-name>
        <url-pattern>/editMedicine</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteMedicineServlet</servlet-name>
        <url-pattern>/deleteMedicine</url-pattern>
    </servlet-mapping>
</web-app>